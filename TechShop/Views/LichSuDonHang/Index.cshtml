@model IEnumerable<TechShop.Models.Order>

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section title{
    <title>Lịch sử đơn hàng</title>
}

<div class="breadcrumb">
    <ul class="breadcrumb__list">
        <li><a href="/"><i aria-hidden="true" class="fa fa-home"></i></a> <i aria-hidden="true" class="far fa-angle-right"></i></li>
        <li><a href="/">Trang chủ</a> <i aria-hidden="true" class="far fa-angle-right"></i></li>
        <li><a href="/lich-su-don-hang">Lịch sử đơn hàng</a></li>
    </ul>
</div>
@section css{
    <style>
        .Order {           
            color: black;
            font-size: 1.5em;
            padding: 1rem;
            text-align: center;
            text-transform: uppercase;
        }
        body {
            font-size: 16px;
            font-family: 'lato', sans-serif;
        }

        table {
            width: 100%;
            border-radius: 3px;
        }

        table tbody td {
            background-color: #ffffff;
            box-shadow: 0px 0px 9px 5px rgba(0,0,0,0.1);
        }

        table tbody th {
            background-color: #ffffff;
            box-shadow: 0px 0px 9px 5px rgba(0,0,0,0.1);
        }

        td, th {
            padding: 20px 10px;
        }

        table tbody td {
            text-align: center;
        }

        table thead {
            background-color: #95A5A6;
            font-size: 14px;
            text-transform: uppercase;
            letter-spacing: 0.03em;
        }
    </style>
}


<div class="class=" container">
    <div class="Order" >Danh Sách đơn đặt hàng</div>
    <table cellspacing="0">
        <thead>
            <tr>
                <th>
                    Ngày đặt hàng
                </th>
                <th>
                    Người nhận hàng
                </th>
                <th>
                    Địa chỉ giao hàng
                </th>

                <th>
                    Tổng tiền
                </th>
                <th>
                    Trạng thái
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <th>
                        @Html.DisplayFor(modelItem => item.CreatedDate)
                    </th>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShipName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ShipAddress)
                    </td>
                    <td>
                        @item.TotalPrice.Value.ToString("N0")
                    </td>
                    @if (item.Status != "Đã xử lý            ")
                    {
                        <td>
                            Đang chờ xử lý
                        </td>
                    }
                    else
                    {
                        <td>
                            Đã giao hàng 
                        </td>
                    }

                </tr>
            }
        </tbody>
    </table>
</div>